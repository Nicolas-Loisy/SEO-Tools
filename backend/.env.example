# Application
APP_NAME="SEO SaaS Tool"
APP_VERSION="0.1.0"
DEBUG=true
ENVIRONMENT=development

# API
API_V1_PREFIX=/api/v1
SECRET_KEY=your-super-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Database
DATABASE_URL=postgresql://seouser:seopassword@localhost:5432/seosaas
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_CACHE_DB=1

# Celery
CELERY_BROKER_URL=redis://localhost:6379/2
CELERY_RESULT_BACKEND=redis://localhost:6379/3

# Meilisearch
MEILISEARCH_URL=http://localhost:7700
MEILISEARCH_KEY=masterKey

# Crawler Settings
CRAWLER_USER_AGENT="SEO-SaaS-Bot/1.0"
CRAWLER_MAX_CONCURRENT=10
CRAWLER_DELAY=1.0
CRAWLER_RESPECT_ROBOTS=true
PLAYWRIGHT_HEADLESS=true
PLAYWRIGHT_TIMEOUT=30000

# LLM Providers (Optional - Leave empty to disable)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
HUGGINGFACE_API_KEY=

# Storage (MinIO S3-compatible)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=seo-saas-storage
S3_SECURE=false

# Monitoring
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# CORS
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5173"]
